<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:paddingHorizontal="40px"
        android:gravity="center">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400px">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icontwo"
                android:layout_gravity="center_vertical|center"/>
    </FrameLayout>

    <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="#ff000000"
            android:layout_marginVertical="5dp"
            android:textColorHint="#ff4e4d4d"
            android:textColorLink="#ff010101"
            android:paddingLeft="10px" />   
    <EditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="#ff000000"
            android:layout_marginVertical="5dp"
            android:textColorHint="#ff4e4d4d"
            android:textColorLink="#ff010101"
            android:paddingLeft="10px" />
    <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#ff000000"
            android:layout_marginVertical="5dp"
            android:textColorHint="#ff4e4d4d"
            android:textColorLink="#ff010101"
            android:paddingLeft="10px" />
    <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ff000000"
            android:layout_marginVertical="5dp"
            android:textColorHint="#ff4e4d4d"
            android:textColorLink="#ff010101"
            android:paddingLeft="10px" />
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:prompt="@string/genero"
            android:id="@+id/spinner" android:contentDescription="@string/app_name" android:spinnerMode="dialog"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="200px"
            android:gravity="center"
            android:paddingVertical="20px" android:paddingHorizontal="80px">
        <Button
                android:id="@+id/buttonCancel"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center|left"
                android:text="Cancel"
                android:backgroundTint="#ff178996" android:layout_row="0" android:layout_column="1"
                android:textColor="#000000"/>
        <Button
                android:id="@+id/buttonAccount"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Sign up"
                android:layout_gravity="center|center_horizontal|right"
                app:iconTint="#ff000000"
                android:backgroundTint="#ff178996" android:layout_row="0" android:layout_column="1"
                android:textColor="#000000"/>
    </GridLayout>
</LinearLayout>
